#!/bin/bash
# postinst script for vx-gitbook-to-vuepress
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

conf_java_jar() {
    # Configuramos mimeapps.list para archivos Java JAR: defaults.list y mimeapps.list
    # Indicamos la lista de mimetypes y filedesktops que los abriran:
    LISTADO=( "application/x-java-archive:vx-java-jar.desktop" \
        "application/java-archive:vx-java-jar.desktop" \
    "application/x-jar:vx-java-jar.desktop")
    vx-mimetype-desktopfile-conf "Default Applications" "${LISTADO[@]}"
}

conf_flash_swf() {
    # Configuramos mimeapps.list para archivos Flash SWF: defaults.list y mimeapps.list
    # Indicamos la lista de mimetypes y filedesktops que los abriran:
    LISTADO=( "application/vnd.adobe.flash.movie:vx-embeber-swf.desktop" \
    "application/x-shockwave-flash:vx-embeber-swf.desktop" )
    vx-mimetype-desktopfile-conf "Default Applications" "${LISTADO[@]}"
}

case "$1" in
    configure)
        
        if test -f "/usr/bin/obtener-resolucion-pantalla" ; then
            chmod 755 "/usr/bin/obtener-resolucion-pantalla"
        fi
        
        # Damos permisos de ejecuciÃ³n a los scripts:
        chmod 755 /usr/bin/vx-*
        chmod u+s /usr/bin/pkexec
        
        # Configuramos mimetypes java_jar y flash_swf:
        conf_java_jar
        conf_flash_swf
        
    ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;
    
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
